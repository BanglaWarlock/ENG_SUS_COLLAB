<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Transparent fill -->
    <solid android:color="@android:color/transparent" />

    <!-- Add border -->
    <stroke
        android:width="1dp"
        android:color="#00BCD4" /> <!-- You can change this color -->

    <!-- Size of the circle -->
    <size
        android:width="60dp"
        android:height="60dp" />
</shape>
