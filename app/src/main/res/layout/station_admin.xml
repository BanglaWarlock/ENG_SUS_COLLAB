    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stationContainer"
        android:layout_width="330dp"
        android:layout_height="73dp"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/roundshapealt">

            <ImageView
                android:id="@+id/icon_Complete"
                android:layout_width="74dp"
                android:layout_height="72dp"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/station" />

            <TextView
                android:id="@+id/text_StName2"
                android:layout_width="170dp"
                android:layout_height="29dp"
                android:text="Batu Lintang Station"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/icon_Complete"
                app:layout_constraintEnd_toStartOf="@+id/text_Date"
                app:layout_constraintStart_toEndOf="@+id/icon_Complete"
                app:layout_constraintTop_toTopOf="@+id/icon_Complete" />

            <TextView
                android:id="@+id/text_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="2 km"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/text_StName2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_StName2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>